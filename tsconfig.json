{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vitest/globals"],
    "paths": {
      "@test/*": ["src/test/*"],
      "@mocks/*": ["src/mocks/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"],
      "@features/*": ["src/features/*"]
    }
  }
}
